# ============================================
# SCHOOL PAYMENT PORTAL - ENVIRONMENT CONFIG
# ============================================

# Application
APP_NAME="School Payment Portal"
APP_ENV=local
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=school_payment
DB_USERNAME=root
DB_PASSWORD=

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# Mail (for notifications)
MAIL_MAILER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@ccdi.edu.ph"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# PAYMENT GATEWAY SETTINGS
# ============================================

# General Payment Settings
PAYMENT_MIN_AMOUNT=1.00
PAYMENT_MAX_AMOUNT=100000.00
PAYMENT_CURRENCY=PHP

# GCash Configuration
GCASH_API_KEY=your_gcash_api_key_here
GCASH_API_SECRET=your_gcash_api_secret_here
GCASH_MERCHANT_ID=your_merchant_id
GCASH_WEBHOOK_SECRET=your_webhook_secret
GCASH_QR_EXPIRY_SECONDS=900
GCASH_FIXED_FEE=0
GCASH_PERCENTAGE_FEE=2.5

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_SANDBOX=true
PAYPAL_CURRENCY=USD
PAYPAL_ORDER_EXPIRY_HOURS=2
PAYPAL_FIXED_FEE=0.30
PAYPAL_PERCENTAGE_FEE=4.4

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_CURRENCY=php
STRIPE_SESSION_EXPIRY_HOURS=24
STRIPE_FIXED_FEE=2.50
STRIPE_PERCENTAGE_FEE=3.0

# ============================================
# SECURITY SETTINGS
# ============================================

# Rate Limiting
PAYMENT_RATE_LIMIT_ATTEMPTS=5
PAYMENT_RATE_LIMIT_MINUTES=1
PAYMENT_MAX_FAILED_ATTEMPTS=10
PAYMENT_FAILED_ATTEMPTS_HOURS=1

# Request Security
PAYMENT_MAX_REQUEST_SIZE=1048576
PAYMENT_MIN_REQUEST_INTERVAL=2
PAYMENT_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# IP Filtering (comma-separated)
PAYMENT_IP_WHITELIST=
PAYMENT_IP_BLACKLIST=

# ============================================
# FRAUD DETECTION
# ============================================

FRAUD_DETECTION_ENABLED=true
FRAUD_DETECTION_THRESHOLD=50
FRAUD_FAILED_ATTEMPTS_WINDOW=60
FRAUD_MAX_FAILED_ATTEMPTS=5
FRAUD_MAX_TRAVEL_SPEED=1000
FRAUD_MAX_PAYMENTS_HOUR=5
FRAUD_MAX_PAYMENTS_DAY=15
FRAUD_MAX_PAYMENTS_WEEK=50
FRAUD_ALERT_EMAILS=admin@ccdi.edu.ph

# ============================================
# NOTIFICATIONS
# ============================================

SEND_PAYMENT_CONFIRMATION_EMAIL=true
SEND_PAYMENT_FAILURE_EMAIL=true
SEND_ADMIN_PAYMENT_NOTIFICATIONS=true
ADMIN_NOTIFICATION_EMAILS=admin@ccdi.edu.ph,accounting@ccdi.edu.ph
SEND_SMS_CONFIRMATION=false

# SMS Provider (Semaphore/Twilio)
SMS_PROVIDER=semaphore
SEMAPHORE_API_KEY=
SEMAPHORE_SENDER_NAME=CCDI
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ============================================
# WEBHOOK SETTINGS
# ============================================

PAYMENT_WEBHOOK_TIMEOUT=30
PAYMENT_WEBHOOK_RETRY_ATTEMPTS=3
PAYMENT_WEBHOOK_RETRY_DELAY=5

# ============================================
# RECEIPT SETTINGS
# ============================================

AUTO_GENERATE_RECEIPTS=true
RECEIPT_TEMPLATE=default
RECEIPT_LOGO_PATH=images/logo.png
RECEIPT_FOOTER_TEXT="Thank you for your payment!"

# ============================================
# LOGGING
# ============================================

LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_PAYMENT_WEBHOOKS=true
LOG_FAILED_PAYMENT_ATTEMPTS=true
LOG_WEBHOOK_RESPONSES=true